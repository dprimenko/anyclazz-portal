---
import '../design-system/index.scss';
import '../layout/styles.scss';

// Configurar fechas en espa√±ol globalmente
import '../utils/dateConfig';

import Menu from '../features/menu/Menu.astro';
import BottomBar from '../features/bottom-bar/BottomBar.astro';
import {getLangFromUrl, useTranslations} from '../i18n';
import { MobileSidebar } from '../components/mobile-sidebar/MobileSidebar';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const {title, description, keywords = []} = Astro.props;

const pageKeywords = [
    ...keywords,
];

const formattedTitle = `${title? `${title} - ` : ''}Anyclazz`
const defaultDescription = '';

const { pathname } = Astro.url;
const isDark = pathname.includes('/feed');
const logo = '/images/logo.png';
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="utf-8"/>
        <link rel="icon" type="image/png" href="/favicon.png"/>
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="viewport" content="width=device-width"/>
        <meta name="generator" content={Astro.generator}/>
        <title>{formattedTitle}</title>
        <meta name="description" content={description??defaultDescription}>
        <meta name="keywords" content={pageKeywords.join(', ')}>
        <meta property="og:title" content={formattedTitle}/>
        <meta property="og:description"
              content={description??defaultDescription}/>
        <meta property="og:url" content={Astro.url}/>
        <meta property="og:site_name" content={formattedTitle}/>
        <meta property="og:image" content="https://anyclazz.com/images/logo.png"/>
        <meta property="og:image:width" content="265"/>
        <meta property="og:image:height" content="80"/>
        <meta property="og:type" content="website"/>
        <meta name="twitter:card" content="summary_large_image"/>
        <meta name="twitter:title" content={formattedTitle}/>
        <meta name="twitter:description"
              content={description}/>
        <meta name="twitter:image" content="https://anyclazz.com/images/logo.png"/>
        <meta name="twitter:image:width" content="265"/>
        <meta name="twitter:image:height" content="80"/>
    </head>
    <body class:list={['font-mulish', 'app', isDark && 'dark']}>
        <nav class="not-mobile left-sidebar__container">
            <div class="left-sidebar__logo">
                <img src={logo} alt="Anyclazz Logo" />
            </div>
            <Menu isDark={isDark} />
        </nav>
        <main class='main__container'>
            <slot/>
        </main>
        <BottomBar class="mobile-only" isDark={isDark} />
        <MobileSidebar client:only/>
    </body>
</html>